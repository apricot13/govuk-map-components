{
  "name": "extract-frontend-components",
  "private": true,
  "version": "0.0.0",
  "packageManager": "npm@10.28.2",
  "engines": {
    "node": ">=24.0.0 <25"
  },
  "type": "module",
  "browser": "./dist/extract-frontend-components.umd.js",
  "module": "./dist/extract-frontend-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/extract-frontend-components.es.js",
      "require": "./dist/extract-frontend-components.umd.js"
    },
    "./extract-frontend-components.css": "./dist/extract-frontend-components.css",
    "./no-font-govuk.css": "./dist/no-font-govuk.css",
    "./types": "./types/index.d.ts",
    "./nunjucks":  {
      "import": "./dist/nunjucks.es.js",
      "require": "./dist/nunjucks.umd.js"
    },
    "./test-data":  {
      "import": "./dist/test-data.es.js",
      "require": "./dist/test-data.umd.js"
    }
  },
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types",
    "src/components",
    "src/layouts"
  ],
  "scripts": {
    "dev": "npm run build && npm run docs:build && concurrently 'npm run dev:dev' 'npm run docs:dev' 'npm run pitsby:dev'",
    "build": "rm -rf dist types && tsc -p tsconfig.build.json && vite build && LIB=nunjucks vite build && LIB=testData vite build && LIB=noFontGovuk vite build && sed 's/src=\".*\"/src=\"extract-frontend-components.es.js\"/' index.html > dist/index.html",
    "dev:dev": "vite",
    "docs:dev": "tsx src/pattern-library/tools/pitsby-docs.ts watch",
    "docs:build": "tsx src/pattern-library/tools/pitsby-docs.ts build",
    "pitsby:dev": "mkdir pitsby && cp -rp public/* pitsby && NODE_ENV=development pitsby build --watch",
    "pitsby:build": "NODE_ENV=production npm run build && NODE_ENV=production npm run docs:build && NODE_ENV=production pitsby build && cp -rp public/* pitsby",
    "pitsby:serve": "NODE_ENV=production npx serve ./pitsby",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext js,ts,cjs,cts,mjs",
    "lint:fix": "eslint . --fix && prettier --write .",
    "prepare": "npm run build && husky && echo 'npx lint-staged' > .husky/pre-commit && git add .husky/pre-commit"
  },
  "devDependencies": {
    "@glorious/pitsby": "^1.37.2",
    "@types/geojson": "^7946.0.16",
    "@types/govuk-frontend": "^5.11.0",
    "@types/node": "^25.2.0",
    "@types/nunjucks": "^3.2.6",
    "@vitest/browser-preview": "^4.0.17",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "^4.0.17",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "nunjucks": "^3.2.4",
    "prettier": "^3.8.0",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.97.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.2.4",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@geoman-io/maplibre-geoman-free": "^0.6.1",
    "@turf/turf": "^7.3.3",
    "govuk-frontend": "^5.14.0",
    "maplibre-gl": "^5.16.0"
  }
}
