{% extends "govuk/template.njk" %}

{# serviceName is set in configuration #}
{% block pageTitle %}
  {% if pageName == "" or pageName is undefined %}
    {{ serviceNameShort }}
  {% else %}
    {{ pageName }}
    - {{ serviceNameShort }}
  {% endif %}
{% endblock %}

{# head section of html #}
{% block head %}
  {% include "layouts/partials/styles.njk" %}
{% endblock %}

{# display page header #}
{% block header %}
  {% include "layouts/partials/header.njk" %}
{% endblock %}

{# before content #}
{% block beforeContent %}
  {% include "layouts/partials/beforeContent.njk" %}
{% endblock %}

{# content #}
{% block content %}
  {% include "layouts/partials/messages.njk" %}
{% endblock %}

{# display page footer #}
{% block footer %}
  {% include "layouts/partials/footer.njk" %}
{% endblock %}

{% block bodyEnd %}
  {% include "layouts/partials/scripts.njk" %}
{% endblock %}
